<!--
============================================================================
DiagnosticWindow.xaml - Diagnostic Results Window
Separate window for displaying camera diagnostic results
By Robert Foster - Dark Warrior Theme
============================================================================
-->
<Window x:Class="PTZCameraOperator.Views.DiagnosticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Diagnostic Results" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="700"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BgCardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="ðŸ”¬ CAMERA DIAGNOSTIC RESULTS" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="{StaticResource AccentGoldBrush}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="CopyResultsButton" Content="ðŸ“‹ COPY" 
                            Style="{StaticResource ModernButton}"
                            Click="CopyResultsButton_Click"
                            Padding="12,6"
                            FontSize="11"
                            Margin="0,0,8,0"
                            ToolTip="Copy diagnostic results to clipboard"/>
                    <Button x:Name="ClearButton" Content="ðŸ—‘ï¸ CLEAR" 
                            Style="{StaticResource ModernButton}"
                            Click="ClearButton_Click"
                            Padding="12,6"
                            FontSize="11"
                            ToolTip="Clear diagnostic results"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Diagnostic Results Display -->
        <Border Grid.Row="1" Background="{StaticResource BgInputBrush}" 
                Margin="16,12"
                CornerRadius="6" 
                Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="DiagnosticText" 
                         IsReadOnly="True" 
                         Background="Transparent" 
                         BorderThickness="0"
                         Foreground="{StaticResource TextPrimaryBrush}" 
                         FontSize="12" 
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         Cursor="IBeam"/>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource BgCardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <TextBlock Text="Diagnostic results are displayed here. Use COPY to copy results to clipboard." 
                       Foreground="{StaticResource TextMutedBrush}" 
                       FontSize="11" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,8"/>
        </Border>
    </Grid>
</Window>
