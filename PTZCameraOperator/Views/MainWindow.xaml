<!--
============================================================================
MainWindow.xaml - PTZ Camera Operator Control Window
Professional PTZ Camera Controller with separate Video Observation Window
By Robert Foster - Dark Warrior Theme
============================================================================
-->
<Window x:Class="PTZCameraOperator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="PTZ Camera Operator - Control Panel" 
        Height="900" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Focusable="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BgCardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PTZ CAMERA OPERATOR" FontSize="22" FontWeight="Bold" Foreground="{StaticResource AccentGoldBrush}"/>
                    <TextBlock Text="Professional ONVIF PTZ Controller by Robert Foster" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>
                
                <!-- Connection Status -->
                <Border Grid.Column="1" Background="{StaticResource BgInputBrush}" CornerRadius="20" Padding="16,8">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="ConnectionIndicator" Width="10" Height="10" Fill="{StaticResource AccentRedBrush}" Margin="0,0,10,0"/>
                        <TextBox x:Name="ConnectionLabel" Text="OFFLINE" 
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{StaticResource TextMutedBrush}" FontSize="13"
                                 Cursor="IBeam"
                                 MinWidth="70"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="200" MaxWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Resizable Splitter -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         Background="{StaticResource BorderBrush}"
                         Width="5"
                         ResizeBehavior="PreviousAndNext"
                         ShowsPreview="False"/>

            <!-- Left Panel - PTZ Controls & Connection & Settings -->
            <Border Grid.Column="0" Background="{StaticResource BgCardBrush}" 
                    CornerRadius="8" Padding="12" Margin="0,0,0,0"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- PTZ Controls - Always Visible at Top -->
                    <Border Grid.Row="0" Background="{StaticResource BgInputBrush}" 
                            CornerRadius="6" Padding="8" Margin="0,0,0,12"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="PTZ CONTROLS" FontSize="11" FontWeight="Bold" 
                                       Foreground="{StaticResource AccentGoldBrush}" 
                                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                       Margin="0,0,0,6" HorizontalAlignment="Center"/>
                            
                            <!-- Compact PTZ Buttons -->
                            <Button x:Name="TiltUpButton" Grid.Row="1" Grid.Column="1" Content="â–²" 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="16"
                                    Width="36" Height="36"
                                    PreviewMouseDown="PtzButton_MouseDown" PreviewMouseUp="PtzButton_MouseUp"
                                    Tag="TiltUp" IsEnabled="False" ToolTip="Tilt Up (W or â†‘)"/>
                            <Button x:Name="PanLeftButton" Grid.Row="2" Grid.Column="0" Content="â—„" 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="16"
                                    Width="36" Height="36"
                                    PreviewMouseDown="PtzButton_MouseDown" PreviewMouseUp="PtzButton_MouseUp"
                                    Tag="PanLeft" IsEnabled="False" ToolTip="Pan Left (A or â†)"/>
                            <Button x:Name="HomeButton" Grid.Row="2" Grid.Column="1" Content="ðŸ " 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="16"
                                    Width="36" Height="36"
                                    Click="HomeButton_Click" ToolTip="Home (H)" IsEnabled="False"/>
                            <Button x:Name="PanRightButton" Grid.Row="2" Grid.Column="2" Content="â–º" 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="16"
                                    Width="36" Height="36"
                                    PreviewMouseDown="PtzButton_MouseDown" PreviewMouseUp="PtzButton_MouseUp"
                                    Tag="PanRight" IsEnabled="False" ToolTip="Pan Right (D or â†’)"/>
                            <Button x:Name="TiltDownButton" Grid.Row="3" Grid.Column="1" Content="â–¼" 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="16"
                                    Width="36" Height="36"
                                    PreviewMouseDown="PtzButton_MouseDown" PreviewMouseUp="PtzButton_MouseUp"
                                    Tag="TiltDown" IsEnabled="False" ToolTip="Tilt Down (S or â†“)"/>
                            <Button x:Name="ZoomInButton" Grid.Row="1" Grid.Column="2" Content="ðŸ”+" 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="12"
                                    Width="36" Height="36"
                                    PreviewMouseDown="PtzButton_MouseDown" PreviewMouseUp="PtzButton_MouseUp"
                                    Tag="ZoomIn" IsEnabled="False" ToolTip="Zoom In (+)"/>
                            <Button x:Name="ZoomOutButton" Grid.Row="3" Grid.Column="2" Content="ðŸ”-" 
                                    Style="{StaticResource PtzButton}" 
                                    FontSize="12"
                                    Width="36" Height="36"
                                    PreviewMouseDown="PtzButton_MouseDown" PreviewMouseUp="PtzButton_MouseUp"
                                    Tag="ZoomOut" IsEnabled="False" ToolTip="Zoom Out (-)"/>
                            <Button x:Name="SetHomeButton" Grid.Row="3" Grid.Column="0" Content="SET HOME" 
                                    Style="{StaticResource ModernButton}" 
                                    Click="SetHomeButton_Click" 
                                    Padding="8,4"
                                    FontSize="10"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Left"
                                    IsEnabled="False"
                                    ToolTip="Set current camera position as home (Preset 0)"/>
                        </Grid>
                    </Border>
                    
                    <!-- Presets Section -->
                    <Border Grid.Row="1" Background="{StaticResource BgInputBrush}" 
                            CornerRadius="6" Padding="8" Margin="0,0,0,12"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="PRESETS" FontSize="11" FontWeight="Bold" 
                                       Foreground="{StaticResource AccentGoldBrush}" 
                                       Grid.Row="0"
                                       Margin="0,0,0,6" HorizontalAlignment="Center"/>
                            
                            <!-- Preset Buttons Grid (3x3) -->
                            <UniformGrid Grid.Row="1" Rows="3" Columns="3" 
                                         HorizontalAlignment="Center" 
                                         Margin="0,0,0,8">
                                <Button x:Name="Preset1Button" Content="1" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="1"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 1 (Ctrl+1)"/>
                                <Button x:Name="Preset2Button" Content="2" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="2"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 2 (Ctrl+2)"/>
                                <Button x:Name="Preset3Button" Content="3" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="3"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 3 (Ctrl+3)"/>
                                <Button x:Name="Preset4Button" Content="4" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="4"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 4 (Ctrl+4)"/>
                                <Button x:Name="Preset5Button" Content="5" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="5"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 5 (Ctrl+5)"/>
                                <Button x:Name="Preset6Button" Content="6" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="6"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 6 (Ctrl+6)"/>
                                <Button x:Name="Preset7Button" Content="7" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="7"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 7 (Ctrl+7)"/>
                                <Button x:Name="Preset8Button" Content="8" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="8"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 8 (Ctrl+8)"/>
                                <Button x:Name="Preset9Button" Content="9" 
                                        Style="{StaticResource ModernButton}"
                                        Click="PresetButton_Click"
                                        Tag="9"
                                        Width="32" Height="32"
                                        FontSize="11" FontWeight="Bold"
                                        Padding="4"
                                        IsEnabled="False"
                                        ToolTip="Go to Preset 9 (Ctrl+9)"/>
                            </UniformGrid>
                            
                            <!-- Set Preset Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="SET" 
                                        Style="{StaticResource ModernButton}"
                                        Click="SetPresetButton_Click"
                                        Padding="6,3"
                                        FontSize="9"
                                        FontWeight="Bold"
                                        Margin="0,0,4,0"
                                        IsEnabled="False"
                                        ToolTip="Set current position to selected preset"/>
                                <ComboBox x:Name="PresetSelectorComboBox" 
                                          Width="50"
                                          FontSize="10"
                                          SelectionChanged="PresetSelectorComboBox_SelectionChanged"
                                          IsEnabled="False">
                                    <ComboBoxItem Content="1" Tag="1"/>
                                    <ComboBoxItem Content="2" Tag="2"/>
                                    <ComboBoxItem Content="3" Tag="3"/>
                                    <ComboBoxItem Content="4" Tag="4"/>
                                    <ComboBoxItem Content="5" Tag="5"/>
                                    <ComboBoxItem Content="6" Tag="6"/>
                                    <ComboBoxItem Content="7" Tag="7"/>
                                    <ComboBoxItem Content="8" Tag="8"/>
                                    <ComboBoxItem Content="9" Tag="9"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Camera Make & Model - Between Presets and Connection -->
                    <Border Grid.Row="2" Background="{StaticResource BgInputBrush}" 
                            CornerRadius="6" Padding="10,8" Margin="0,0,0,12"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="CAMERA" FontSize="10" FontWeight="Bold" 
                                       Foreground="{StaticResource AccentBlueBrush}" 
                                       Margin="0,0,0,4"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CameraInfoLabel" 
                                       Text="No camera connected" 
                                       Foreground="{StaticResource TextMutedBrush}" 
                                       FontSize="11"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Connection & Settings - Scrollable -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="CONNECTION" FontSize="12" FontWeight="Bold" 
                                       Foreground="{StaticResource AccentBlueBrush}" Margin="0,0,0,12"/>

                        <TextBlock Text="Camera IP Address" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,0,0,3"/>
                        <TextBox x:Name="HostTextBox" Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,8" FontSize="11" Padding="6,4"/>

                        <TextBlock Text="ONVIF Port" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,0,0,3"/>
                        <TextBox x:Name="PortTextBox" Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,8" FontSize="11" Padding="6,4"/>

                        <TextBlock Text="Username" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,0,0,3"/>
                        <TextBox x:Name="UsernameTextBox" Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,8" FontSize="11" Padding="6,4"/>

                        <TextBlock Text="Password" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,0,0,3"/>
                        <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBox}"
                                     Margin="0,0,0,12" FontSize="11" Padding="6,4"/>

                        <Button x:Name="ConnectButton" Content="âš¡ CONNECT" 
                                Style="{StaticResource PrimaryButton}"
                                Click="ConnectButton_Click"
                                HorizontalAlignment="Stretch" Margin="0,0,0,6" Padding="8,5" FontSize="10"/>

                        <Button x:Name="PingButton" Content="ðŸ” PING" 
                                Style="{StaticResource ModernButton}"
                                Click="PingButton_Click"
                                HorizontalAlignment="Stretch" Margin="0,0,0,6" Padding="8,5" FontSize="10"/>

                        <Button x:Name="DiagnosticButton" Content="ðŸ”¬ DIAGNOSTIC" 
                                Style="{StaticResource ModernButton}"
                                Click="DiagnosticButton_Click"
                                HorizontalAlignment="Stretch" Margin="0,0,0,6" Padding="8,5" FontSize="10"
                                ToolTip="Test all camera APIs and connection methods to find what works"/>

                        <!-- Discovery Section -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="DiscoveryButton" Content="ðŸ”Ž DISCOVER" 
                                    Style="{StaticResource ModernButton}"
                                    Click="DiscoveryButton_Click"
                                    HorizontalAlignment="Stretch"/>
                            <Button x:Name="StopDiscoveryButton" Grid.Column="2" Content="â¬›" 
                                    Style="{StaticResource ModernButton}"
                                    Click="StopDiscoveryButton_Click" 
                                    Width="45" IsEnabled="False"/>
                        </Grid>

                        <!-- Discovered Cameras List -->
                        <TextBlock Text="Discovered Cameras" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,8,0,3"/>
                        <Border Background="{StaticResource BgInputBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                MaxHeight="80" Margin="0,0,0,10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="DiscoveredCamerasListBox" 
                                         Background="Transparent"
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         BorderThickness="0"
                                         Padding="4,3"
                                         FontSize="11"
                                         SelectionChanged="DiscoveredCamerasListBox_SelectionChanged"
                                         MouseDoubleClick="DiscoveredCamerasListBox_MouseDoubleClick"
                                         SelectionMode="Single">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Cursor="Hand"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="8,4"/>
                                            <Setter Property="Margin" Value="2"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#30363d"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource AccentGoldBrush}"/>
                                                    <Setter Property="Foreground" Value="#0d1117"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </ScrollViewer>
                        </Border>


                        <TextBlock Text="PTZ SPEED" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource AccentBlueBrush}" Margin="0,8,0,8"/>

                        <TextBlock Text="Pan/Tilt Speed" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,0,0,3"/>
                        <Slider x:Name="PanTiltSpeedSlider" Minimum="0.1" Maximum="1.0" Value="0.5" 
                                TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,4" Height="20"/>
                        <TextBlock x:Name="PanTiltSpeedLabel" Text="0.5" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" HorizontalAlignment="Right" Margin="0,0,0,8"/>

                        <TextBlock Text="Zoom Speed" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" Margin="0,0,0,3"/>
                        <Slider x:Name="ZoomSpeedSlider" Minimum="0.1" Maximum="1.0" Value="0.3" 
                                TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,4" Height="20"/>
                        <TextBlock x:Name="ZoomSpeedLabel" Text="0.3" 
                                   Foreground="{StaticResource TextMutedBrush}" 
                                   FontSize="10" HorizontalAlignment="Right" Margin="0,0,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel - Video & PTZ Controls -->
            <Border Grid.Column="2" Background="{StaticResource BgCardBrush}" 
                    CornerRadius="8" Padding="16"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Video Section Header with Fullscreen Toggle -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¹ VIDEO" FontSize="14" FontWeight="Bold" 
                                       Foreground="{StaticResource AccentGoldBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="(F11: Fullscreen)" FontSize="9" 
                                       Foreground="{StaticResource TextMutedBrush}" 
                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button x:Name="FullscreenButton" Content="â›¶ FULLSCREEN" 
                               Style="{StaticResource ModernButton}"
                               HorizontalAlignment="Right"
                               Padding="8,4"
                               FontSize="9"
                               Click="FullscreenButton_Click"
                               ToolTip="Toggle Fullscreen (F11)"/>
                    </Grid>

                    <!-- Video Display Area - Fills most space -->
                    <Border Grid.Row="1" Background="#000000" 
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="6"
                            Margin="0,0,0,8">
                        <Grid>
                            <vlc:VideoView x:Name="VideoView" 
                                          Background="Black"
                                          HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Stretch"/>
                            <TextBlock x:Name="VideoPlaceholderText" 
                                      Text="No video stream active&#x0a;Enter RTSP URL and click START" 
                                      Foreground="{StaticResource TextMutedBrush}" 
                                      FontSize="16"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Bottom Panel: Compact Video Controls -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Video Controls -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Stream URL:" 
                                      Foreground="{StaticResource TextMutedBrush}" 
                                      FontSize="10" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,6,0"/>
                            <TextBox x:Name="StreamUrlTextBox" 
                                    Style="{StaticResource ModernTextBox}"
                                    Grid.Column="1"
                                    Margin="0,0,6,0"
                                    FontSize="10" Padding="6,4"/>
                            <Button x:Name="StartVideoButton" Content="â–¶ START" 
                                   Style="{StaticResource PrimaryButton}"
                                   Grid.Column="2"
                                   Margin="0,0,6,0"
                                   Padding="8,4"
                                   FontSize="10"
                                   Click="StartVideoButton_Click"/>
                            <Button x:Name="StopVideoButton" Content="â¹ STOP" 
                                   Style="{StaticResource ModernButton}"
                                   Grid.Column="3"
                                   Padding="8,4"
                                   FontSize="10"
                                   IsEnabled="False"
                                   Click="StopVideoButton_Click"/>
                        </Grid>

                        <Button x:Name="AutoDetectStreamButton" Content="ðŸ” AUTO DETECT RTSP" 
                               Style="{StaticResource ModernButton}"
                               Grid.Row="1"
                               HorizontalAlignment="Stretch"
                               Padding="8,4"
                               FontSize="10"
                               Click="AutoDetectStreamButton_Click"/>
                    </Grid>

                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource BgCardBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <TextBlock Text="PTZ Camera Operator v2.0 - Professional ONVIF Controller" 
                       Foreground="{StaticResource TextMutedBrush}" 
                       FontSize="11" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="0,8"/>
        </Border>
    </Grid>
</Window>
