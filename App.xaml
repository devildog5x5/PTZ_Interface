<Application x:Class="PTZCameraControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- VIBRANT COMPETITION THEME - Red, Blue, Competition Orange           -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        
        <!-- Core Background Colors - Deep Dark Base -->
        <Color x:Key="BackgroundDark">#0D0D12</Color>
        <Color x:Key="BackgroundMedium">#14141C</Color>
        <Color x:Key="SurfaceDark">#1A1A24</Color>
        <Color x:Key="SurfaceLight">#242430</Color>
        <Color x:Key="CardDark">#2A2A38</Color>
        
        <!-- VIBRANT PRIMARY COLORS -->
        <Color x:Key="ElectricBlue">#00BFFF</Color>
        <Color x:Key="ElectricBlueDark">#0099CC</Color>
        <Color x:Key="ElectricBlueLight">#4DD4FF</Color>
        <Color x:Key="ElectricBlueGlow">#00BFFF</Color>
        
        <Color x:Key="CompetitionOrange">#FF6600</Color>
        <Color x:Key="CompetitionOrangeDark">#CC5200</Color>
        <Color x:Key="CompetitionOrangeLight">#FF8533</Color>
        <Color x:Key="CompetitionOrangeGlow">#FF6600</Color>
        
        <Color x:Key="RacingRed">#FF1744</Color>
        <Color x:Key="RacingRedDark">#D50032</Color>
        <Color x:Key="RacingRedLight">#FF5272</Color>
        <Color x:Key="RacingRedGlow">#FF1744</Color>
        
        <!-- Accent Colors -->
        <Color x:Key="NeonCyan">#00FFFF</Color>
        <Color x:Key="NeonMagenta">#FF00FF</Color>
        <Color x:Key="NeonGreen">#39FF14</Color>
        <Color x:Key="PureWhite">#FFFFFF</Color>
        
        <!-- Text Colors -->
        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#A0A8B8</Color>
        <Color x:Key="TextMuted">#606878</Color>
        
        <!-- Status Colors -->
        <Color x:Key="SuccessGreen">#00E676</Color>
        <Color x:Key="WarningYellow">#FFEA00</Color>
        <Color x:Key="ErrorRed">#FF1744</Color>
        
        <!-- Border Colors -->
        <Color x:Key="BorderDark">#3A3A48</Color>
        <Color x:Key="BorderGlow">#00BFFF</Color>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- GRADIENT BRUSHES - High Impact Visuals                              -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        
        <!-- Epic Header Gradient - Blue to Orange to Red -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00BFFF" Offset="0"/>
            <GradientStop Color="#FF6600" Offset="0.5"/>
            <GradientStop Color="#FF1744" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Primary Button Gradient - Electric Blue -->
        <LinearGradientBrush x:Key="BlueButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#00BFFF" Offset="0"/>
            <GradientStop Color="#0088CC" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Orange Button Gradient -->
        <LinearGradientBrush x:Key="OrangeButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF8533" Offset="0"/>
            <GradientStop Color="#FF6600" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Red Button Gradient -->
        <LinearGradientBrush x:Key="RedButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF5272" Offset="0"/>
            <GradientStop Color="#FF1744" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- PTZ Control Gradient -->
        <LinearGradientBrush x:Key="PtzGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1A24" Offset="0"/>
            <GradientStop Color="#242430" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Glow Gradient for borders -->
        <LinearGradientBrush x:Key="GlowBorderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#00BFFF" Offset="0"/>
            <GradientStop Color="#FF6600" Offset="0.5"/>
            <GradientStop Color="#FF1744" Offset="1"/>
        </LinearGradientBrush>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- SOLID BRUSHES                                                       -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
        <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDark}"/>
        <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLight}"/>
        <SolidColorBrush x:Key="CardDarkBrush" Color="{StaticResource CardDark}"/>
        
        <SolidColorBrush x:Key="ElectricBlueBrush" Color="{StaticResource ElectricBlue}"/>
        <SolidColorBrush x:Key="ElectricBlueDarkBrush" Color="{StaticResource ElectricBlueDark}"/>
        <SolidColorBrush x:Key="CompetitionOrangeBrush" Color="{StaticResource CompetitionOrange}"/>
        <SolidColorBrush x:Key="CompetitionOrangeDarkBrush" Color="{StaticResource CompetitionOrangeDark}"/>
        <SolidColorBrush x:Key="RacingRedBrush" Color="{StaticResource RacingRed}"/>
        <SolidColorBrush x:Key="RacingRedDarkBrush" Color="{StaticResource RacingRedDark}"/>
        
        <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyan}"/>
        <SolidColorBrush x:Key="NeonMagentaBrush" Color="{StaticResource NeonMagenta}"/>
        <SolidColorBrush x:Key="NeonGreenBrush" Color="{StaticResource NeonGreen}"/>
        
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
        
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
        <SolidColorBrush x:Key="WarningYellowBrush" Color="{StaticResource WarningYellow}"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
        
        <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDark}"/>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- BUTTON STYLES                                                       -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        
        <!-- Primary Blue Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BlueButtonGradient}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" 
                                                  Direction="0" Color="#00BFFF" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" 
                                                          Direction="0" Color="#00BFFF" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ElectricBlueDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Action Button -->
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource OrangeButtonGradient}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" 
                                                  Direction="0" Color="#FF6600" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" 
                                                          Direction="0" Color="#FF6600" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CompetitionOrangeDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Red Danger/Stop Button -->
        <Style x:Key="RedButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource RedButtonGradient}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" 
                                                  Direction="0" Color="#FF1744" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" 
                                                          Direction="0" Color="#FF1744" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource RacingRedDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Standard Surface Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ElectricBlueBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ElectricBlueDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PTZ Direction Button - Large with Glow -->
        <Style x:Key="PtzButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
            <Setter Property="Width" Value="55"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ElectricBlueBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" 
                                                          Direction="0" Color="#00BFFF" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource CompetitionOrangeBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" 
                                                          Direction="0" Color="#FF6600" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ═══════════════════════════════════════════════════════════════════ -->
        <!-- INPUT STYLES                                                        -->
        <!-- ═══════════════════════════════════════════════════════════════════ -->
        
        <!-- Modern TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="{StaticResource ElectricBlueBrush}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource ElectricBlueBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ElectricBlueBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" 
                                                          Direction="0" Color="#00BFFF" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource SurfaceDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="{StaticResource ElectricBlueBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ElectricBlueBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" 
                                                          Direction="0" Color="#00BFFF" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
